<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="720.0" minWidth="720.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.RentalController">
	<children>
		<VBox alignment="CENTER" prefHeight="720.0" prefWidth="720.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<children>
				<HBox alignment="CENTER" prefHeight="356.0" prefWidth="718.0" spacing="20.0">
					<children>
						<VBox alignment="CENTER" maxWidth="300.0" minWidth="180.0" prefHeight="196.0" prefWidth="598.0" spacing="7.0">
							<children>
								<Label text="Customer">
									<font>
										<Font size="15.0" />
									</font>
								</Label>
								<ComboBox fx:id="customer" prefWidth="150.0" />
								<Label text="Staff">
									<font>
										<Font size="15.0" />
									</font>
									<padding>
										<Insets top="10.0" />
									</padding>
								</Label>
								<ComboBox fx:id="staff" prefWidth="150.0" />
								<Label text="Inventory">
									<font>
										<Font size="15.0" />
									</font>
									<padding>
										<Insets top="10.0" />
									</padding>
								</Label>
								<ComboBox fx:id="inventory" prefWidth="150.0" />
							</children>
							<HBox.margin>
								<Insets />
							</HBox.margin>
						</VBox>
						<VBox alignment="CENTER_LEFT" maxWidth="300.0" minWidth="180.0" prefHeight="196.0" prefWidth="598.0" spacing="7.0">
							<children>
								<!-- <Label text="Rental Date">
									<font>
										<Font size="15.0" />
									</font>
								</Label>
								<DatePicker fx:id="rentalDate" /> -->
								<Label text="Return Date">
									<font>
										<Font size="15.0" />
									</font>
									<padding>
										<Insets top="10.0" />
									</padding>
								</Label>
								<DatePicker fx:id="returnDate" />
								<HBox alignment="BOTTOM_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
									<children>
										<Button alignment="CENTER" mnemonicParsing="false" onAction="#add" text="Add" />
										<Button alignment="CENTER" mnemonicParsing="false" onAction="#update" text="Update" />
										<Button alignment="CENTER" mnemonicParsing="false" onAction="#delete" text="Delete" />
									</children>
								</HBox>
							</children>
						</VBox>
					</children>
					<padding>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</padding>
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</HBox>
				<TableView fx:id="tableView" VBox.vgrow="ALWAYS">
					<columns>
						<TableColumn minWidth="75.0" prefWidth="75.0" text="Rental ID">
							<cellValueFactory>
								<PropertyValueFactory property="id" />
							</cellValueFactory>
						</TableColumn>

						<TableColumn minWidth="150.0" prefWidth="150.0" text="Rental Date">
							<cellValueFactory>
								<PropertyValueFactory property="rentalDate" />
							</cellValueFactory>
						</TableColumn>

						<TableColumn minWidth="150.0" prefWidth="150.0" text="Inventory">
							<cellValueFactory>
								<PropertyValueFactory property="Inventory" />
							</cellValueFactory>
						</TableColumn>

						<TableColumn minWidth="150.0" prefWidth="150.0" text="Customer">
							<cellValueFactory>
								<PropertyValueFactory property="Customer" />
							</cellValueFactory>
						</TableColumn>

						<TableColumn minWidth="150.0" prefWidth="150.0" text="Return Date">
							<cellValueFactory>
								<PropertyValueFactory property="returnDate" />
							</cellValueFactory>
						</TableColumn>

						<TableColumn minWidth="100.0" prefWidth="100.0" text="Staff">
							<cellValueFactory>
								<PropertyValueFactory property="staff" />
							</cellValueFactory>
						</TableColumn>


						<TableColumn minWidth="150.0" prefWidth="150.0" text="Last Updated">
							<cellValueFactory>
								<PropertyValueFactory property="lastUpdate" />
							</cellValueFactory>
						</TableColumn>
					</columns>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
				</TableView>
			</children>

		</VBox>
	</children>
</AnchorPane>
