<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane 
	minHeight="720.0" minWidth="720.0" 
	xmlns="http://javafx.com/javafx/15.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.controller.CustomerController">
	<children>
		<VBox alignment="CENTER" prefHeight="720.0" prefWidth="720.0"
			AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<children>
				<HBox alignment="CENTER" prefHeight="356.0" prefWidth="718.0"
					spacing="20.0">
					<children>
						<VBox maxWidth="300.0" minWidth="180.0" prefHeight="196.0"
							prefWidth="598.0" spacing="7.0">
							<children>
								<Label text="First Name">
									<font>
										<Font size="15.0" />
									</font>
								</Label>
								<TextField fx:id="firstName">
									<font>
										<Font size="15.0" />
									</font>
								</TextField>
								<Label text="Last Name">
									<font>
										<Font size="15.0" />
									</font>
								</Label>
								<TextField fx:id="lastName">
									<font>
										<Font size="15.0" />
									</font>
								</TextField>
								<Label text="Email">
									<font>
										<Font size="15.0" />
									</font>
								</Label>
								<TextField fx:id="email">
									<font>
										<Font size="15.0" />
									</font>
								</TextField>
							</children>
						</VBox>
						<VBox maxWidth="300.0" minWidth="180.0" prefHeight="196.0"
							prefWidth="598.0" spacing="7.0">
							<children>
								<Label text="Address ">
									<font>
										<Font size="15.0" />
									</font>
								</Label>
								<ComboBox fx:id="address" prefWidth="150.0" />
								<Label text="Store">
									<font>
										<Font size="15.0" />
									</font>
									<padding>
										<Insets top="10.0" />
									</padding>
								</Label>
								<ComboBox fx:id="store" prefWidth="150.0" />
								<Label text="Active Customer">
									<font>
										<Font size="15.0" />
									</font>
									<padding>
										<Insets top="10.0" />
									</padding>
								</Label>
								<CheckBox fx:id="activeCustomer"
									mnemonicParsing="false" text="Active/Inacctive">
									<font>
										<Font size="15.0" />
									</font>
								</CheckBox>
								<HBox alignment="CENTER_LEFT" prefHeight="100.0"
									prefWidth="200.0" spacing="20.0">
									<children>
										<Button alignment="CENTER" mnemonicParsing="false"
											onAction="#add" text="Add" />
										<Button alignment="CENTER" mnemonicParsing="false"
											onAction="#update" text="Update" />
										<Button alignment="CENTER" mnemonicParsing="false"
											onAction="#delete" text="Delete" />
									</children>
								</HBox>
							</children>
							<HBox.margin>
								<Insets />
							</HBox.margin>
						</VBox>
					</children>
					<padding>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</padding>
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</HBox>
				<TableView fx:id="tableView" VBox.vgrow="ALWAYS">
					<columns>
						<TableColumn minWidth="75.0" prefWidth="75.0"
							text="Customer ID">
							<cellValueFactory>
								<PropertyValueFactory property="id" />
							</cellValueFactory>
						</TableColumn>

						<TableColumn minWidth="150.0" prefWidth="150.0"
							text="Store">
							<cellValueFactory>
								<PropertyValueFactory property="store" />
							</cellValueFactory>
						</TableColumn>

						<TableColumn minWidth="150.0" prefWidth="150.0"
							text="First Name">
							<cellValueFactory>
								<PropertyValueFactory property="firstName" />
							</cellValueFactory>
						</TableColumn>

						<TableColumn minWidth="150.0" prefWidth="150.0"
							text="Last Name">
							<cellValueFactory>
								<PropertyValueFactory property="lastName" />
							</cellValueFactory>
						</TableColumn>

						<TableColumn minWidth="150.0" prefWidth="150.0"
							text="Email">
							<cellValueFactory>
								<PropertyValueFactory property="email" />
							</cellValueFactory>
						</TableColumn>

						<TableColumn minWidth="100.0" prefWidth="100.0"
							text="Address">
							<cellValueFactory>
								<PropertyValueFactory property="address" />
							</cellValueFactory>
						</TableColumn>

						<TableColumn minWidth="100.0" prefWidth="100.0"
							text="Active">
							<cellValueFactory>
								<PropertyValueFactory property="active" />
							</cellValueFactory>
						</TableColumn>

						<TableColumn minWidth="150.0" prefWidth="150.0"
							text="Create Date">
							<cellValueFactory>
								<PropertyValueFactory property="createDate" />
							</cellValueFactory>
						</TableColumn>


						<TableColumn minWidth="150.0" prefWidth="150.0"
							text="Last Updated">
							<cellValueFactory>
								<PropertyValueFactory property="lastUpdate" />
							</cellValueFactory>
						</TableColumn>
					</columns>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
				</TableView>
			</children>

		</VBox>
	</children>
</AnchorPane>
